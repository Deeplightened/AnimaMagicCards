<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorControlHighlight">@color/dark_gray</item>
    </style>

    <style name="FlatButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/flat_button</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">@dimen/spacing_base</item>
        <item name="android:paddingRight">@dimen/spacing_base</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ScrollButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/scroll_button_banner</item>
        <item name="android:paddingLeft">@dimen/spacing_base</item>
        <item name="android:paddingRight">@dimen/spacing_base</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:width">120dp</item>
        <item name="android:height">40dp</item>
    </style>

    <style name="FlatButton.NoPadding" >
        <item name="android:minHeight">0dp</item>
    </style>


</resources>
