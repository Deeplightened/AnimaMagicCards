<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="fr.enlight.anima.animamagiccards.ui.witchspells.viewmodels.WitchspellsCreationViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/witchspells_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/spacing_base"
            android:layout_marginLeft="@dimen/spacing_base"
            android:layout_marginRight="@dimen/spacing_base"
            android:layout_marginStart="@dimen/spacing_base"
            android:src="@drawable/witchspells_book_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H,7:10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_base"
            android:layout_marginRight="@dimen/spacing_base"
            android:inputType="text"
            android:hint="@string/Witchspells_Name_Label"
            app:customFont="@{@string/spell_title_font}"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@id/witchspells_background"
            app:layout_constraintRight_toRightOf="@id/witchspells_background"
            app:layout_constraintTop_toTopOf="@id/witchspells_background" />




    </android.support.constraint.ConstraintLayout>
</layout>