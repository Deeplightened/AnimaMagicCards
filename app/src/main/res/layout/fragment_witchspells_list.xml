<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="fr.enlight.anima.animamagiccards.views.viewmodels.RecyclerViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/header_spacing">

        <android.support.constraint.Guideline
            android:id="@+id/right_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

        <TextView
            android:id="@+id/witchspells_title"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/spacing_base"
            android:layout_marginStart="@dimen/spacing_base"
            android:background="@drawable/witchspells_title_scroll_background"
            android:textColor="@android:color/black"
            android:paddingEnd="@dimen/spacing_base"
            android:paddingLeft="@dimen/spacing_big"
            android:paddingRight="@dimen/spacing_base"
            android:paddingStart="@dimen/spacing_big"
            android:text="@string/Witch_Creation_Title"
            android:gravity="center_vertical"
            android:textSize="40sp"
            app:customFont="@{@string/spell_title_font}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/right_guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/spacing_base"
            android:layout_marginStart="@dimen/spacing_base"
            android:layout_marginRight="@dimen/witchbook_margin"
            android:layout_marginEnd="@dimen/witchbook_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/right_guideline"
            app:layout_constraintTop_toBottomOf="@id/witchspells_title"
            app:viewModels="@{model.viewModels}"
            app:layoutManager="@{model.layoutManager}"/>

    </android.support.constraint.ConstraintLayout>
</layout>