<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="fr.enlight.anima.animamagiccards.viewmodels.SpellbookViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="@{() -> model.onSpellbookClicked()}"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/spellbook_scroll_icon"
            android:layout_width="180dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/card_spell_effect_scroll"/>

        <ImageView
            android:id="@+id/spellbook_icon"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/spellbook_scroll_icon"
            app:layout_constraintBottom_toBottomOf="@id/spellbook_scroll_icon"
            app:layout_constraintLeft_toLeftOf="@id/spellbook_scroll_icon"
            app:layout_constraintRight_toRightOf="@id/spellbook_scroll_icon"
            app:layout_constraintVertical_bias="0.8"
            android:layout_marginTop="@dimen/spacing_base"
            android:src="@{model.getSpellbookIcon(context)}"
            tools:src="@drawable/card_icon_book_light" />

        <TextView
            android:id="@+id/spellbook_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/spellbook_scroll_icon"
            app:layout_constraintBottom_toBottomOf="@id/spellbook_scroll_icon"
            app:layout_constraintLeft_toLeftOf="@id/spellbook_scroll_icon"
            app:layout_constraintRight_toRightOf="@id/spellbook_scroll_icon"
            app:layout_constraintVertical_bias="0.2"
            android:text="@{model.getTitle(context)}"
            android:textSize="21sp"
            tools:text="LumiÃ¨re" />

    </android.support.constraint.ConstraintLayout>
</layout>